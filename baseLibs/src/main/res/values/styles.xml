<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Animation_Dialog">
        <item name="android:windowEnterAnimation">@anim/up_in</item>
        <item name="android:windowExitAnimation">@anim/down_out</item>
    </style>

    <style name="BlackTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
    </style>

    <style name="BaseEdit" parent="Widget.AppCompat.EditText">
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">@null</item>
    </style>

    <style name="BasePhoneEdit" parent="BaseEdit">
        <item name="android:inputType">phone</item>
        <item name="android:digits">0123456789</item>
        <item name="android:maxLength">11</item>
        <item name="singleLine">true</item>
    </style>

    <style name="BasePassEdit" parent="BaseEdit">
        <item name="android:inputType">textPassword</item>
        <item name="android:maxLength">20</item>
        <item name="singleLine">true</item>
    </style>
</resources>